const express = require("express");
const cors = require("cors");
const app = express();

app.use(cors());
app.use(express.json());

app.post("/proxy", async (req, res) => {
  try {
    const fetch = (await import("node-fetch")).default;
    const makeRes = await fetch(
      "https://hook.eu2.make.com/uhiihkel15cay5u6kul592ridqhy1ysk",
      {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(req.body),
      }
    );

    const rawText = await makeRes.text();

    let makeData;
    try {
      makeData = JSON.parse(rawText);

      if (makeRes.ok && makeData.answer) {
        return res.status(200).json({ answer: makeData.answer });
      } else {
        return res.status(200).json({ answer: "Not found" });
      }
    } catch (parseError) {
      console.error("Could not parse JSON from Make. Raw text:", rawText);
      return res.status(200).json({ answer: rawText });
    }
  } catch (error) {
    console.error("FULL ERROR:", error);
    res.status(500).json({ error: "Something went wrong" });
  }
});

app.listen(3000, () => {
  console.log("Proxy running on port 3000");
});
